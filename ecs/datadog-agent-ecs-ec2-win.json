{
  "family": "masafumi-kashiwagi-ecs-ec2-win",
  "containerDefinitions": [
    {
      "name": "datadog-agent",
      "image": "public.ecr.aws/datadog/agent:latest",
      "cpu": 512,
      "memory": 512,
      "essential": true,
      "mountPoints": [
        {
          "containerPath": "\\\\.\\pipe\\docker_engine",
          "sourceVolume": "docker_sock"
        },
	{
          "sourceVolume": "ntpd",
          "containerPath": "C:\\ProgramData\\Datadog\\conf.d\\ntp.d"
        }
      ],
      "environment": [
        {
          "name": "DD_API_KEY",
          "value": "{DD_API_KEY}"
        },
        {
          "name": "DD_SITE",
          "value": "datadoghq.com"
        }
      ],
      "healthCheck": {
	  "retries": 3,
	  "command": ["CMD-SHELL","agent health"],
	  "timeout": 5,
	  "interval": 30,
	  "startPeriod": 15
      },
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "masafumi-kashiwagi-win-agent",
              "awslogs-region": "ap-northeast-1",
              "awslogs-create-group": "true",
              "awslogs-stream-prefix": "mk"
          }
      }
    }
  ],
  "volumes": [
    {
      "host": {
        "sourcePath": "\\\\.\\pipe\\docker_engine"
      },
      "name": "docker_sock"
    },
    {
      "name": "ntpd",
      "host": {
          "sourcePath": "C:\\ProgramData\\Datadog\\conf.d\\ntp.d"
    }
    }
  ]
}
